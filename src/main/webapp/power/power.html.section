<div id="power_manage" style="display:none">
    <div id="power_title" class="col-lg-3 col-sm-12">
        <div id="power_title_content">

        </div>
        <nav id="power_pagination">
            <ul class="pagination">
                <li data-page="-1"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                </li>
                <li data-page="+1"><a href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span> </a></li>
            </ul>
        </nav>
    </div>
    <div class="col-lg-9  col-sm-12">
        <form class="form-horizontal" action="/power_manage?action=update" method="post">
            <fieldset>
                <div>
                    <legend>权限修改
                        <button class="btn btn-default" onclick="addNewPower()" type="button">新增权限
                        </button>
                    </legend>
                </div>
            </fieldset>
            <div class="control-group">
                <div class="col-lg-3 col-lg-offset-3 col-sm-12">权限编号</div>
                <div class="controls col-lg-6 col-sm-12">
                    <input id="power_id" type="number" readonly name="id" class="input-xlarge">
                </div>
            </div>
            <div class="control-group">
                <div class="col-lg-3 col-lg-offset-3  col-sm-12">权限名</div>
                <div class="controls col-lg-6 col-sm-12">
                    <input id="power_display_name" type="text" name="display_name" class="input-xlarge">
                </div>
            </div>
            <div class="control-group">
                <div class="controls col-lg-6 col-sm-6 text-center">
                    <button type="submit" class="btn btn-success">提交</button>
                </div>
                <div class="controls col-lg-6 col-sm-6 text-center">
                    <button type="reset" class="btn btn-success">重置</button>
                </div>
            </div>
        </form>
    </div>
</div>